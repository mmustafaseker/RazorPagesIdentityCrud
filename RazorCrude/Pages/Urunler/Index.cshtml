@page
@model RazorCrude.Pages.Urunler.IndexModel
@{
}
<a class="btn btn-success mb-2"  asp-page="/Urunler/Yeni">Yeni Ürün Ekle</a>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Ürün Fiyatı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._db.Urunler)
            {
                <tr>
                    <td>@item.UrunAd</td>
                    <td>@item.BirimFiyat</td>
                    <td>
                        <button class="btn btn-danger" type="submit" asp-page-handler="delete" asp-route-id="@item.Id">Delete</button>
                        <a class="btn btn-secondary" asp-page="/Urunler/duzenle" asp-route-id="@item.Id">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>
